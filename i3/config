workspace $term output eDP-1-1
workspace $files output eDP-1-1
workspace $free1 output eDP-1-1
workspace $editor output HDMI-0
workspace $mail output HDMI-0
workspace $web output HDMI-0
workspace $music output DVI-I-2-1

